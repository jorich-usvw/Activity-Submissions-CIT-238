<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_background"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="20dp"
        android:gravity="center_vertical"
        android:background="@color/dark_surface"
        android:elevation="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/card_overlay"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="◄"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Now Playing"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.05" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="40dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/primary_pink">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_pink">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_pink"
                android:alpha="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="♪"
                android:textSize="140sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="8" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/songTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textSize="30sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/songStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready"
            android:textSize="16sp"
            android:textColor="@color/primary_pink"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="#1C1C1C"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="@color/white"
                android:thumbTint="@color/white"
                android:progressBackgroundTint="#444444"
                android:max="100"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/menuButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="24dp"
                        android:background="@color/white"
                        android:layout_marginEnd="4dp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="24dp"
                        android:background="@color/white"
                        android:layout_marginEnd="4dp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="24dp"
                        android:background="@color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/stopButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="⏹"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="32dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="8dp">

                        <TextView
                            android:id="@+id/pauseButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="⏸"
                            android:textSize="32sp"
                            android:textColor="#1C1C1C"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/playButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="▶"
                            android:textSize="32sp"
                            android:textColor="#1C1C1C"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <TextView
                    android:id="@+id/nextButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="⏭"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless" />

                <TextView
                    android:id="@+id/favoriteButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="♡"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:clickable="false"
                    android:focusable="false" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
